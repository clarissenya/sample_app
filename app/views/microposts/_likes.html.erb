<span id="likes-<%= micropost.id %>">
	<% if current_user.liked?(micropost) %>
		<%= link_to api_micropost_likes_path(micropost), method: :delete, remote: true do %>
		<%= fa_icon "heart" %>
		<% end %>
	<% else %>
		<%= link_to api_micropost_likes_path(micropost), method: :post, remote: true do %>
			<%= fa_icon "heart-o" %>
		<% end %>
	<% end %>
	<%= micropost.likes.count %>
</span>
